{
    "dataset_reader": {
      "type": "conll2003",
      "tag_label": "ner",
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
        },
        "token_characters": {
          "type": "characters",
          "min_padding_length": 1
        }
      }
    },
    "train_data_path": "tests/models/data/conll2003.txt",
    "validation_data_path": "tests/models/data/conll2003.txt",
    "model": {
      "type": "cvt_tagger",
      "label_encoding": "BIO",
      "calculate_span_f1" : true,
      "text_field_embedder": {
        "token_embedders": {
          "tokens": {
            "type": "embedding",
            "embedding_dim": 50
          },
          "token_characters": {
            "type": "character_encoding",
            "embedding": {
              "embedding_dim": 25
            },
            "encoder": {
              "type": "gru",
              "input_size": 25,
              "hidden_size": 80,
              "num_layers": 2,
              "dropout": 0.25,
              "bidirectional": true
            }
          }
        }
      },
      "encoder": {
        "type": "gru",
        "input_size": 210,
        "hidden_size": 300,
        "num_layers": 2,
        "dropout": 0.5,
        "bidirectional": true
      },
      "feedforward": {
        "input_dim": 600,
        "num_layers": 1,
        "hidden_dims": 20,
        "activations": ["relu"],
        "dropout": 0.2
      }
    },
    "iterator": {"type": "basic", "batch_size": 32},
    "trainer": {
      "optimizer": "adam",
      "num_epochs": 5,
      "cuda_device": -1
    }
  }